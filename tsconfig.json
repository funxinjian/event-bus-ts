{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "declaration": true, // 生成 .d.ts 文件
    "declarationMap": true, // 可选：生成声明源映射
    "outDir": "./lib", // 输出目录
    "rootDir": "./src", // 源代码目录
    "strict": true,
    "removeComments": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": [
      "jest"
    ], // 显式包含 Jest 类型
  },
  "include": [
    "src",
    "test", // 包含测试目录
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}